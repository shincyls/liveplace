<div class="container">
    <div class="row">

        <!-- Section Left -->
        <div class="col-md-6">
            <div class="m-4">
                <h1>LIVEPLACE</h1>
                <h3>Better Earth Start From Better Place</h3>
            </div>
        </div>

        <!-- Section Right -->
        <div class="col-md-6">
            <div class="card m-4">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="signin-tab" data-toggle="tab" href="#signin" role="tab" aria-controls="signin" aria-selected="true">Existing Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="signup-tab" data-toggle="tab" href="#signup" role="tab" aria-controls="signup" aria-selected="false">New Account</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="signin" role="tabpanel" aria-labelledby="signin-tab">
                            <%= render partial: 'devise/sessions/new'%>
                        </div>
                        <div class="tab-pane fade" id="signup" role="tabpanel" aria-labelledby="signup-tab">
                            <%= render partial: 'devise/registrations/new'%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>