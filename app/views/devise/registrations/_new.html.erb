<%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: "signup-form") do |r| %>
  <%= devise_error_messages! %>

  <div class="row mt-2">
    <div class="col-lg-6"><%= r.text_field :first_name, autofocus: true, placeholder: "First Name", class: "form-control" %></div>
    <div class="col-lg-6"><%= r.text_field :last_name, autofocus: true, placeholder: "Last Name", class: "form-control" %></div>
  </div>

  <div class="row mt-2">
    <div class="col-lg-12"><%= r.text_field :username, autofocus: true, placeholder: "Username", class: "form-control" %></div>
  </div>

  <div class="row mt-2">
    <div class="col-lg-12"><%= r.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %></div>
  </div>

  <div class="row mt-2">
    <div class="col-lg-12"><%= r.password_field :password, placeholder: "Password", class: "form-control" %></div>
  </div>

  <div class="row mt-2">
    <div class="col-lg-12"><%= r.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control" %></div>
  </div>

  <br>

  <div class="row justify-content-center">
    <%= r.submit "Sign Up", class: "btn btn-primary" %>
  </div>

<% end %>
